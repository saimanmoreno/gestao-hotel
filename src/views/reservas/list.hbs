<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">{{title}}</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="#">Reservas</a></li>
                    <li class="active"> {{title}} </li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <div class="row">
                    <a href="/reservas/add">
                        <button type="button" class="btn btn-primary">
                            <i class="fas fa-plus-circle"></i>
                            Fazer Nova Reserva</button>
                    </a>
                </div>
                <div class="row">

                    <div class="col-md-12 text-center">
                        <div class="btn-group text-center" role="group" aria-label="Basic example">
                            <button type="button" class="btn btn-outline-primary"><a style="color: inherit;"
                                    href="/reservas">Todos</a></button>
                            <button type="button" class="btn btn-outline-warning"><a style="color: inherit;"
                                    href="/reservas/solicitado">Solicitados</a></button>
                            <button type="button" class="btn btn-outline-secondary"><a style="color: inherit;"
                                    href="/reservas/confirmado">Confirmados</a></button>
                            <button type="button" class="btn btn-outline-success"><a style="color: inherit;"
                                    href="/reservas/hospedado">Hospedados</a></button>
                            <button type="button" class="btn btn-outline-info"><a style="color: inherit;"
                                    href="/reservas/finalizado">Finalizado</a></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="white-box">
                <div class="row">
                    {{#each reservas}}
                    <div class="col-md-4 mb-4">
                        <div class="card text-center">
                            <div class="card-header">
                                {{ nome_h }}
                            </div>
                            <div class="card-body">
                                <p style="font-size: small;" class="m-2">Check-in: {{checkin}}</p>
                                <p class="m-2">Estado da Reserva: {{status}}</p>
                                <p class="text-muted">
                                    Feita há: {{timeago data_reserva}} por <a
                                        href="/funcionarios/ver/{{funcionario_id}}">{{ nome_f }}</a>
                                </p>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a class="btn btn-outline-success" href="/reservas/ver/{{codigo}}">
                                        Ver
                                    </a>
                                    <a class="btn btn-outline-danger" href="/reservas/delete/{{codigo}}">
                                        Cancelar
                                    </a>
                                </div>

                            </div>
                        </div>
                    </div>
                    {{else}}
                    <div class="col-md-4 mx-auto">
                        <div class="card card-body text-center">
                            <div class="card-header">
                                Não há Reservas ainda
                            </div>
                            <div class="card-body">

                                Fazer Reserva!
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
        <footer class="footer text-center"> 2020 &copy; Gestão de Projetos Informáticos
            <br> Desenvolvido por Saiman Moreno
        </footer>
    </div>
    <!-- ============================================================== -->
    <!-- End Page Content -->
    <!-- ============================================================== -->