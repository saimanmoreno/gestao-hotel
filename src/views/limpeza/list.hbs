<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">{{title}}</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="#">Funcionários</a></li>
                    <li class="active"> {{title}} </li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
            <div class="row">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <a href="/funcionarios/add">
                        <button type="button" class="btn btn-primary">
                            <i class="fas fa-plus-circle"></i>
                            Registrar Novo Funcionário de Limpeza</button>
                    </a>
                </div>
                <div class="col-md-12">
                    <div class="white-box">
                        <div class="row">
                            {{#each limpeza}}
                            <div class="col-md-8 mb-4">
                                <div class="card text-center">
                                    <div class="card-header">
                                        <b>{{ nome_f }}</b>
                                    </div>
                                    <div class="card-body">
                                        <p style="font-size: small;" class="m-2">{{cargo}}</p>
                                        <p class="text-muted">{{ email }}</p>
                                        <div class="btn-group" role="group" aria-label="Basic example">
                                            <a class="btn btn-outline-success" href="/funcionarios/ver/{{id}}">
                                                Ver
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{else}}
                            <div class="col-md-12 mx-auto">
                                <div class="text-center">
                                    <h3>Nenhuma empregada de limpeza encontrado!</h3>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
        <footer class="footer text-center"> 2020 &copy; Gestão de Projetos Informáticos
            <br> Desenvolvido por Saiman Moreno
        </footer>
    </div>
    <!-- ============================================================== -->
    <!-- End Page Content -->
    <!-- ============================================================== -->

    