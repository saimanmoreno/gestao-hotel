<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">{{ title }}</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="#">{{ title }}</a></li>
                    <li class="active">Lista</li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="white-box">
                    <div class="container mt-5">
                        <div class="row">
                            <div class="col-md-10">
                                <table class="table table-bordered table-hover text-center">
                                    <thead>
                                        <tr>
                                            <td>Número Pagamento</td>
                                            <td>Data</td>
                                            <td>Valor Total</td>
                                            <td>Reserva</td>
                                            <td>Funcionário</td>
                                            <td>Ações</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each pagamentos}}
                                        <tr>
                                            <td>0000{{ num_pagamento }}</td>
                                            <td>{{ data_pagamento }}</td>
                                            <td>{{ valor }}</td>
                                            <td> <a href="/reservas/ver/{{codigo}}">{{ codigo }}</a></td>
                                            <td> <a href="/funcionarios/ver/{{ id }}">{{ nome_f }}</a></td>
                                            <td>
                                                <a href="/pagamentos/ver/{{num_pagamento}}" class="btn btn-info">Ver</a>
                                            </td>
                                        </tr>
                                        {{else}}
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
    <footer class="footer text-center"> 2020 &copy; Gestão de Projetos Informáticos </footer>
</div>
