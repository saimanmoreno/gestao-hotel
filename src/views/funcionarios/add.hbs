                                                <input type="text" name="endereco" placeholder="Endereço "
                                                    class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <input type="number" name="telefone" placeholder="Telefone"
                                                    class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <input type="email" name="email" placeholder="Email"
                                                    class="form-control">
                                            </div>
